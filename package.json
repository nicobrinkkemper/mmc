{
  "name": "mmc",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "homepage": "https://mmcelebration.com",
  "scripts": {
    "start": "run-s react:start",
    "lint": "eslint ./src --fix",
    "serve": "node dist/server/dev-server.mjs",
    "serve-gh": "export PUBLIC_URL=/mmc; node dist/server/dev-server.mjs",
    "build:client": "vite build",
    "build:server": "NODE_OPTIONS='--conditions=react-server' vite build --ssr --config vite.server.config.ts",
    "build": "npm run build:client && npm run build:server",
    "export": "node dist/server/export.js",
    "build:all": "npm run build && npm run export",
    "build-gh": "BASE_URL='https://nicobrinkkemper.github.io' PUBLIC_URL='/mmc' NODE_OPTIONS='--conditions=react-server' vite build --config vite.server.config.ts --ssr",
    "tsc": "rm -rf dist && npx tsc --project tsconfig.node.json && find src -name \"*.css\" -exec cp --parents {} dist/ \\;",
    "tsc-watch": "npx tsc --build --watch --incremental --force",
    "ssg": "run-s build server:crawl",
    "prebuild-gh": "run-s startup:*",
    "postbuild-gh": "echo 'Build completed'",
    "postinstall": "patch-package",
    "copy-oss": "cp -r oss-experimental/* node_modules/",
    "patch-oss": "node_modules/vite-plugin-react-server/bin/patch.mjs",
    "link-dev": "npm link vite-plugin-react-server",
    "predeploy": "npm run build-gh",
    "deploy": "gh-pages -d build",
    "test": "run-s startup react:test",
    "react:test": "vitest",
    "react:build": "NODE_OPTIONS='--conditions react-server' vite build --config vite.server.config.ts --ssr",
    "react:start": "NODE_OPTIONS='--conditions react-server' vite --config vite.server.config.ts",
    "startup": "run-s startup:*",
    "startup:compile": "npx tsc --project tsconfig.node.json",
    "startup:run": "export NODE_ENV='development'; export NODE_OPTIONS='--experimental-json-modules --enable-source-maps'; node ./dist/startup/startup.mjs",
    "dev": "vite",
    "preview": "vite preview",
    "css": "find src -name \"*.css\" -exec cp --parents {} dist/ \\;",
    "oopsie-wsl": "find . -type f -name \"*:Zone.Identifier\" -exec rm {} \\;"
  },
  "engines": {
    "node": ">=18"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {},
    "overrides": [
      {
        "files": [
          "src/**/*.ts?(x)",
          "startup/src/**/*.mts?(x)"
        ],
        "rules": {}
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/compression": "^1.7.5",
    "@types/connect-history-api-fallback": "^1.5.4",
    "@types/cookie-parser": "^1.4.8",
    "@types/debug": "^4.1.12",
    "@types/lodash": "^4.17.13",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "acorn-loose": "^8.4.0",
    "babel-plugin-react-compiler": "^19.0.0-beta-37ed2a7-20241206",
    "clsx": "^2.1.1",
    "compression": "^1.7.5",
    "connect-history-api-fallback": "^2.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "eslint-plugin-react-compiler": "^19.0.0-beta-37ed2a7-20241206",
    "express": "^4.21.2",
    "gh-pages": "^6.2.0",
    "happy-dom": "^15.11.7",
    "image-size": "^1.1.1",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "markdown-to-jsx": "^7.7.2",
    "npm-check-updates": "^17.1.11",
    "npm-run-all": "^4.1.5",
    "patch-package": "^8.0.0",
    "postcss-modules": "^6.0.1",
    "react": "^19.1.0-canary-8759c5c8-20250207",
    "react-dom": "^19.1.0-canary-8759c5c8-20250207",
    "react-server-dom-esm": "^0.0.1",
    "sharp": "^0.33.5",
    "typescript": "^5.7.2",
    "typescript-plugin-css-modules": "^5.1.0",
    "vite": "^6.0.11",
    "vite-css-modules": "^1.8.0",
    "vite-plugin-react-server": "^0.3.15",
    "vitest": "^2.1.8",
    "webpack-sources": "^3.2.3"
  },
  "include": [
    "src"
  ],
  "overrides": {
    "react": "$react",
    "react-dom": "$react-dom"
  }
}
